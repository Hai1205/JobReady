# Environment Variables cho Production Deployment
# Copy file này thành .env và điền giá trị thực tế

# ===================================
# APPLICATION CONFIGURATION
# ===================================
APP_BASE_URL=https://api.yourdomain.com
FRONTEND_SUCCESS_URL=https://yourdomain.com/login-success
FRONTEND_ERROR_URL=https://yourdomain.com/login-error

# ===================================
# OAUTH2 PROVIDER CREDENTIALS
# ===================================
# Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Facebook OAuth2  
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# GitHub OAuth2
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# ===================================
# DATABASE CONFIGURATION
# ===================================
MYSQL_ROOT_PASSWORD=your_strong_root_password_here
MYSQL_APP_PASSWORD=your_strong_app_password_here

# ===================================
# RABBITMQ CONFIGURATION  
# ===================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_strong_rabbitmq_password_here

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_PASSWORD=your_strong_redis_password_here

# ===================================
# MONITORING CONFIGURATION
# ===================================
GRAFANA_PASSWORD=your_strong_grafana_password_here

# ===================================
# SSL/TLS CONFIGURATION
# ===================================
SSL_ENABLED=true
SSL_KEYSTORE_PATH=file:/secrets/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password_here

# ===================================
# LOGGING CONFIGURATION
# ===================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs

# ===================================
# PERFORMANCE TUNING
# ===================================
MAX_THREADS=200
MIN_THREADS=10
CONNECTION_TIMEOUT=20000

# ===================================
# CORS CONFIGURATION
# ===================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===================================
# JWT CONFIGURATION
# ===================================
JWT_EXPIRATION=86400000

# ===================================
# SECURITY NOTES
# ===================================
# 1. Thay thế tất cả "your_*_here" bằng giá trị thực tế
# 2. Sử dụng password phức tạp và unique cho mỗi service
# 3. Không commit file .env vào git repository
# 4. Sử dụng secret management tools trong production (AWS Secrets Manager, Azure Key Vault, etc.)
# 5. Rotate credentials định kỳ
# 6. Enable monitoring và alerting cho security events