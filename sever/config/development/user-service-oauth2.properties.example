# User Service OAuth2 Configuration  
# File: user-service/src/main/resources/application-oauth2.properties

# ===================================
# SERVER CONFIGURATION
# ===================================
server.port=8083
spring.application.name=user-service

# ===================================
# EUREKA CONFIGURATION
# ===================================
eureka.client.service-url.defaultZone=http://localhost:8761/eureka/

# ===================================
# DATABASE CONFIGURATION
# ===================================
spring.datasource.url=jdbc:mysql://localhost:3306/jobready
spring.datasource.username=root
spring.datasource.password=password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# ===================================
# RABBITMQ CONFIGURATION
# ===================================
spring.rabbitmq.host=localhost
spring.rabbitmq.port=5672
spring.rabbitmq.username=guest
spring.rabbitmq.password=guest

# ===================================
# JWT CONFIGURATION
# ===================================
app.jwt.public-key-path=classpath:public-key.pem

# ===================================
# OAUTH2 USER FIELDS CONFIGURATION
# ===================================
# Tự động tạo các cột OAuth2 trong User table nếu chưa có
spring.jpa.hibernate.ddl-auto=update

# ===================================
# LOGGING
# ===================================
logging.level.com.example.userservice=DEBUG
logging.level.org.springframework.security=DEBUG
logging.level.org.hibernate.SQL=DEBUG

# ===================================
# ACTUATOR
# ===================================
management.endpoints.web.exposure.include=health,info,metrics
management.endpoint.health.show-details=always